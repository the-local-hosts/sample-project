{{#each books as |book|}}

  <section data-id="{{book.id}}">
    <h6>Coolest Book Title Ever!:</h6>
    <h3>
      {{limit book.title 15}}
    </h2>
    <h6>The Writer of this fine book:</h6>
    <p>
      {{#if book.author}}
        {{book.author}}!!!
      {{else}}
        No author provided.
      {{/if}}
    </p>

  </section>



{{/each}}
